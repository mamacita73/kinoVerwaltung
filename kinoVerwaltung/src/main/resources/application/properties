# Datenbankverbindung
spring.datasource.url=jdbc:postgresql://localhost:5432/kino
spring.datasource.username=admin
spring.datasource.password=fhdwfhdw
spring.datasource.driver-class-name=org.postgresql.Driver

# JPA & Hibernate Konfiguration
spring.jpa.database-platform=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.hibernate.ddl-auto=update  # Automatische Schema-Aktualisierung
spring.jpa.show-sql=true  # SQL-Abfragen in der Konsole anzeigen

# Verbindungspool (empfohlen)
spring.datasource.hikari.maximum-pool-size=10
spring.datasource.hikari.minimum-idle=2



# RabbitMQ Konfiguration
spring.rabbitmq.host=localhost
spring.rabbitmq.port=5672
spring.rabbitmq.username=admin
spring.rabbitmq.password=fhdwfhdw
